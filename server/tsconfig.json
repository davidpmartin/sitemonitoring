{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "*": ["node_modules/*", "src/types/*"],
      "@root/*": ["../*"],
      "@client/*": ["../client/*"],
      "@lib/*": ["./*"],
      "@config/*": ["./config/*"],
      "@controllers/*": ["./controllers/*"],
      "@middleware/*": ["./middleware/*"],
      "@models/*": ["./models/*"],
      "@routes/*": ["./routes/*"],
      "@utils/*": ["./utils/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules"]
}
